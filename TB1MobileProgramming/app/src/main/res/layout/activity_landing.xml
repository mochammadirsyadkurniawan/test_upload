<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landingActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:id="@+id/satu"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/purple"
                />

            <ImageView
                android:id="@+id/landing_gunung"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/hijau"
                android:layout_marginTop="-150dp"
                android:src="@drawable/background_landing_gunung" />

            <ImageView
                android:id="@+id/kanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jempol_kanan"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                />

            <ImageView
                android:id="@+id/vectorPutih"
                android:src="@drawable/vector_putih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jempol_kiri"
                />

            <ImageView
                android:id="@+id/hamburger"
                android:onClick="tampilkanMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hamburger"
                android:layout_alignParentEnd="true"
                android:background="@drawable/radius100"
                android:padding="10dp"
                android:layout_below="@+id/vectorPutih"
                android:layout_marginTop="-20dp"
                />


            <ImageView
                android:id="@+id/hijau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-19dp"
                android:src="@drawable/vector_hijau" />

            <ImageView
                android:id="@+id/profile_landing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/foto_beranda"
                android:layout_below="@+id/kiri"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-30dp"
                />

            <TextView
                android:id="@+id/selamat_pagi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Pagi"
                android:textSize="15sp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/profile_landing"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olivia Gabrielle"
                android:layout_below="@id/selamat_pagi"
                android:textSize="15sp"
                android:fontFamily="@font/poppinsextra"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/profile_landing"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-5dp"
                />


            <TextView
                android:id="@+id/email_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="olivia.gabrielle@gmail.com"
                android:textSize="11sp"
                android:fontFamily="@font/poppinsregular"
                android:textColor="@color/white"
                android:layout_below="@id/nama"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/profile_landing"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-5dp"
                />

            <ImageView
                android:id="@+id/image_scroll_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="250dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame1"
                        />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/frame2"
                        android:onClick="onView7Clicked" />

                    <View
                        android:id="@+id/view8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/frame3" />
                </LinearLayout>
            </HorizontalScrollView>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/raisa"
                android:id="@+id/raisa"
                android:layout_below="@id/email_nama"
                android:layout_marginTop="300dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/vaganzaFiesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raisa"
                android:fontFamily="@font/poppinsmedium"
                android:text="Vaganza Fiesta"
                android:layout_marginLeft="40dp"
                android:textSize="16sp"
                android:layout_marginTop="-20sp"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/voucher_traveloka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vaganzaFiesta"
                android:src="@drawable/traveloka_70"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:onClick="onViewTravelokaClicked"

                />

            <ImageView
                android:id="@+id/voucher_shoope"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoope_pay_100"
                android:layout_below="@+id/vaganzaFiesta"
                android:layout_toRightOf="@+id/voucher_traveloka"
                android:layout_marginTop="5dp"
                android:padding="10dp"

                />

            <ImageView
                android:id="@+id/voucherFood"
                android:onClick="extraVaganzaUndian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/food_gift"
                android:layout_below="@+id/voucher_traveloka"
                android:padding="10dp"
                />

            <ImageView
                android:id="@+id/voucherGoFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voucher"
                android:layout_below="@+id/voucher_shoope"
                android:layout_toRightOf="@+id/voucher_traveloka"
                android:padding="10dp"
                />



            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:id="@+id/layout_bawah"
                android:layout_below="@+id/voucherFood"
                android:background="@drawable/background_layout_gradient"
                />

            <ImageView
                android:id="@+id/vector_kiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vektor_footer_kiri"
                android:layout_below="@id/voucherFood"
                android:layout_marginTop="-130dp"
                />

            <ImageView
                android:id="@+id/vector_kanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vektor_footer_kanan"
                android:layout_below="@+id/voucherGoFood"
                android:layout_marginTop="50dp"
                />


            <TextView
                android:id="@+id/hadiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:layout_below="@id/vector_kiri"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="Hadiah Menarik"
                android:layout_marginTop="-85dp"


                />

            <ImageView
                android:id="@+id/surprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift"
                android:layout_below="@+id/hadiah"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:id="@+id/kado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hadiah"
                android:src="@drawable/kado"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="28dp"
                />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/menu" />



</androidx.drawerlayout.widget.DrawerLayout>